<Container>:
    orientation:'vertical'
    toolbar : toolbar

    MDToolbar:
        id: toolbar
        title: 'Connection'
        md_bg_color: .2, .2, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        panel_color: .2, .2, .2, 1

        MDBottomNavigationItem:
            name: 'screen1'
            text: 'devices'
            icon: 'bluetooth'

            on_tab_release:
                root.changenameback()

            MDLabel:
                text: 'choose your device from the list'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen2'
            text: 'controls'
            icon: 'gamepad'

            on_tab_release:
                root.changename()

            MDLabel:
                text: ' '
                halign: 'center'
